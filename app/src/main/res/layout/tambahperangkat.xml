<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <View
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@color/green100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/icon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Perangkat"
        android:textColor="@color/neutral1000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/inter18_ptbold"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_back" />

    <ImageView
        android:id="@+id/img_hero_bg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/bg_circle"
        app:layout_constraintBottom_toBottomOf="@id/header_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintVertical_bias="0.4"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/img_hero_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/icon_perangkat_terhubung_iot"
        app:layout_constraintBottom_toBottomOf="@id/img_hero_bg"
        app:layout_constraintEnd_toEndOf="@id/img_hero_bg"
        app:layout_constraintStart_toStartOf="@id/img_hero_bg"
        app:layout_constraintTop_toTopOf="@id/img_hero_bg"
        tools:ignore="ContentDescription" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_scan"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/header_bg"
        android:layout_marginTop="-40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:minHeight="15dp">

            <TextView
                android:id="@+id/scan_device_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pindai Perangkat"
                android:layout_marginTop="0dp"
                android:textSize="16sp"
                android:fontFamily="@font/inter18_ptmedium"
                android:textColor="@color/neutral1000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/scan_device_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:minWidth="60dp"
                android:minHeight="32dp"

                app:useMaterialThemeColors="false"

                app:thumbTint="@null"
                app:trackTint="@null"

                android:thumb="@drawable/btn_switch_thumb"
                app:track="@drawable/btn_switch_track"

                app:layout_constraintBottom_toBottomOf="@id/scan_device_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/scan_device_title"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_label_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:text="Perangkat yang dipasangkan"
        android:textColor="@color/neutral1000"
        android:textSize="14sp"
        android:fontFamily="@font/inter18_ptmedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_scan" />

    <TextView
        android:id="@+id/tv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Segarkan"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_label_device"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="16dp"
        app:strokeColor="@android:color/transparent"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_label_device"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Tidak ada perangkat yang dipasangkan"
            android:textColor="#BDBDBD"
            android:textSize="14sp"/>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>