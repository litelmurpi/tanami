<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/scannerLine"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@drawable/scanner_line_glow"
        android:visibility="invisible"
        android:elevation="2dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/imgScanBorder"
        app:layout_constraintStart_toStartOf="@id/imgScanBorder"
        app:layout_constraintEnd_toEndOf="@id/imgScanBorder"/>

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="24dp"
        android:padding="12dp"
        android:src="@drawable/icon_back"
        android:background="@drawable/bg_circle_white_transparent"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/btnHistory"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="24dp"
        android:padding="12dp"
        android:src="@drawable/icon_clocks_arrow"
        android:background="@drawable/bg_circle_white_transparent"
        app:tint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imgOverlay"
        android:layout_width="288dp"
        android:layout_height="299dp"
        android:src="@drawable/bg_rounded_top_white"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.416"/>

    <ImageView
        android:id="@+id/imgScanBorder"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:src="@drawable/bg_scan_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"/>

    <ImageButton
        android:id="@+id/btnAnalyze"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/btn_analyze"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="Analyze Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="#4CAF50"
        android:elevation="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/btnAnalyze"
        app:layout_constraintEnd_toEndOf="@id/btnAnalyze"
        app:layout_constraintStart_toStartOf="@id/btnAnalyze"
        app:layout_constraintTop_toTopOf="@id/btnAnalyze"/>

</androidx.constraintlayout.widget.ConstraintLayout>