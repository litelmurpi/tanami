<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_success"
    android:padding="40dp">

    <!-- Icon Checklist Hijau -->
    <ImageView
        android:id="@+id/icon_success"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_check_circle"
        android:contentDescription="Success Icon" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_success_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Welcome to"
        android:textSize="20sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-medium" />

    <!-- Logo Tanami -->
    <ImageView
        android:id="@+id/logo_tanami"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_below="@id/tv_success_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo_tanami"
        android:contentDescription="Logo Tanami" />

    <!-- Subtitle/Description -->
    <TextView
        android:id="@+id/tv_success_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_tanami"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:text="Menanam Tumbuhan, Menyiram Harapan,\nmenumbuhkan Masa Depan."
        android:textSize="13sp"
        android:textColor="#777777"
        android:textAlignment="center"
        android:gravity="center"
        android:lineSpacingExtra="3dp" />

</RelativeLayout>