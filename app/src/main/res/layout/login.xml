<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="314dp"
        android:layout_height="162dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_tanami"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="“Menanam Tumbuhan,  Menyiram Harapan, menumbuhkan Masa Depan.”"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:layout_marginBottom="100dp"
        android:textSize="15dp">
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alamat Email"
        android:minHeight="48dp"
        android:padding="20dp"
        android:drawableEnd="@drawable/icon_email"
        android:background="@drawable/border"
        android:layout_marginBottom="20dp"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kata Sandi"
        android:minHeight="48dp"
        android:padding="20dp"
        android:drawableEnd="@drawable/icon_sandi_sementara"
        android:background="@drawable/border"
        android:layout_marginBottom="7dp"></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="35dp"
        android:text="Lupa Kata Sandi?"
        android:textColor="@color/neutral400"
        android:textSize="12dp">
    </TextView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:backgroundTint="#54BD10"
        android:layout_marginBottom="10dp"
        android:textSize="17dp"
        android:text="MASUK">
    </Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:layout_gravity="center"
        android:textColor="@color/neutral300"
        android:text="----------------------------------------Atau----------------------------------------">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="apakah tidak punya akun? "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Daftar"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnGoogle"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/border_btn_google"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="3dp"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_google"
            android:contentDescription="Google Logo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk dengan Google"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>